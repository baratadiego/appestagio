# Configurações de desenvolvimento
# ATENÇÃO: Para produção, gere um SECRET_KEY seguro e nunca use o valor padrão!
DEBUG=False
SECRET_KEY=${SECRET_KEY:-changeme-in-prod}

# Configurações de banco de dados (para Docker)
DATABASE_URL=postgresql://estagios_user:estagios_pass@db:5432/estagios_db

# Configurações PostgreSQL para Docker Compose
POSTGRES_USER=estagios_user
POSTGRES_PASSWORD=estagios_pass
POSTGRES_DB=estagios_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@estagios.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ATENÇÃO: Altere ALLOWED_HOSTS para o domínio real em produção
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com,localhost,127.0.0.1

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@admin.com
DJANGO_SUPERUSER_PASSWORD=admin123

USE_S3=False
# Para produção S3:
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_STORAGE_BUCKET_NAME=...
# AWS_S3_REGION_NAME=...

# Healthcheck para o serviço PostgreSQL
HEALTHCHECK_CMD=["CMD-SHELL", "pg_isready -U $${POSTGRES_USER}"]

